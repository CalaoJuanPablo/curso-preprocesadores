// VARIABLES
// Colores
color-primario = #333333
color-secundario = #8841da
color-claro = #ffffff

// Tipograf√≠as
fuente1 = 'Lato', sans-serif
fuente2 = 'Oswald', sans-serif

// Mixins
contenedor()
	display: flex
	width: 90%
	margin: 0 auto
	padding: 30px 0

sombra-caja()
	background-color: color-claro
	box-shadow: 0px 20px 33px 0px rgba(0,0,0,0.20)

// Funciones
opacidad(color, cantidad)
	alpha(color, cantidad)

// Loops
for header in 3 2 1
	h{header}
		font-size: 35px - (5*header)
		margin: 0

// Condicional
titulos(fuente)
	if fuente == fuente2
		font-family: fuente2
		font-weight: 600
		text-transform: uppercase
	else
		font-family: fuente1


// Estilos globales
* 
	box-sizing: border-box

body
	margin: 0
	color: color-primario
	titulos(fuente1)